<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Lewvitec"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Your Online Store"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btnCreateStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Store"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_500" />

    <Button
        android:id="@+id/btnLoginExisting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login to Existing Store"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi-Store E-commerce Platform"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginTop="32dp" />

</LinearLayout>